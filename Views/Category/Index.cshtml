@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="pt-4 row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end ">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle m-1"></i> Create New Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>DisplayOrder</th>
            <th>CreatedDate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    @obj.CreatedDate
                </td>
                <td class="text-end"> 
                    <a asp-action="Edit" asp-controller="Category" class="btn btn-primary mx-2" asp-route-id="@obj.Id">
                        <i class="bi bi-pencil-square"></i>Edit
                    </a>
                    <a asp-action="Delete" asp-controller="Category" class="btn btn-primary mx-2" asp-route-id="@obj.Id">
                        <i class="bi bi-trash"></i>Delete
                    </a>
                </td>
                @* <td> <a asp-action="Edit" asp-controller="Category" class="btn btn-primary mx-2" asp-route-id="@obj.Id"> *@
                @*         <i class="bi bi-pencil-square"></i>Edit</a>  *@
                @* </td> *@
            </tr>
        }
       
    </tbody>
</table>

</div>
